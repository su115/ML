<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5sp"
    android:background="#FFEB3B">

    <TextView
        android:id="@+id/wifi_ssid_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:padding="5sp"
        android:text="Wifi SSID"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bssid_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2sp"
        android:padding="5sp"
        android:text="Wifi BSSID"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/wifi_ssid_item"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/level_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:layout_marginTop="4dp"
        android:padding="5sp"
        android:text="level"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/wifi_ssid_item"
        app:layout_constraintTop_toBottomOf="@+id/bssid_item" />
</androidx.constraintlayout.widget.ConstraintLayout>