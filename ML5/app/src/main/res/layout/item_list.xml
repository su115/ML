<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4sp"
    android:background="#994741"
    android:padding="10sp">

    <ImageView
        android:id="@+id/photo_pizza_item"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/price_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:padding="4sp"
        android:text="price_item"
        android:textColor="#FFEB3B"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/pizza_name_item"
        app:layout_constraintTop_toBottomOf="@+id/pizza_name_item" />

    <TextView
        android:id="@+id/pizza_name_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:padding="4sp"
        android:text="pizza_name_item"
        android:textColor="#4AC3B5"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/photo_pizza_item"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>